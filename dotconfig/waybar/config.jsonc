    "on-click": "pavucontrol",
  },
  "custom/media": {
    "format": "<span size='20000' rise='-2000'>{icon}</span> {text}",
    "return-type": "json",
    "max-length": 40,
    "format-icons": {
      "spotify": "ÔÜº",
      "default": "üéú",
